{
    "name": "work-scholar-backend",
    "description": "A backend application for the Work Scholar project using Laravel and PostgreSQL.",
    "type": "project",
    "require": {
        "php": "^8.0",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/framework": "^9.0",
        "laravel/tinker": "^2.0",
        "doctrine/dbal": "^3.0",
        "laravel/passport": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "nunomaduro/collision": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "php artisan migrate --force"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}